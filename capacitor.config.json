{
  "appId": "com.vowvenues.app",
  "appName": "VowVenues",
  "webDir": "dist",
  "server": {
    "androidScheme": "https"
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#ffffff"
    },
    "PushNotifications": {
      "presentationOptions": [
        "badge",
        "sound",
        "alert"
      ]
    },
    "Geolocation": {
      "permissions": [
        "locationWhenInUse",
        "locationAlways"
      ]
    },
    "Camera": {
      "permissions": [
        "camera",
        "photos"
      ],
      "presentationStyle": "fullscreen"
    }
  },
  "android": {
    "allowMixedContent": true,
    "captureInput": true,
    "webContentsDebuggingEnabled": true
  },
  "ios": {
    "contentInset": "always"
  }
}
